{
  "name": "foos-v2-server",
  "version": "0.0.1",
  "displayName": "Foos v2 Server",
  "description": "A server to provide some data to Foos v2 Client",
  "main": "index.js",
  "author": "Rafael Pérez García <rperez@tuenti.com>",
  "license": "MIT",
  "lint-staged": {
    "linters": {
      "./src/**/*.js": [
        "npm run prettier",
        "npm run lint",
        "git add"
      ]
    }
  },
  "scripts": {
    "lint": "tslint **/*.ts **/*.tsx",
    "check-types": "tsc",
    "prettier": "prettier --config .prettierrc --write './src/**/*.tsx' './src/**/*.ts' './src/**/*.js'",
    "clean:build": "rimraf dist",
    "pre-build": "npm run lint && npm run check-types && npm run prettier && npm run clean:build",
    "build:dev": "npm run pre-build && webpack --config ./webpack/dev.config.ts",
    "build:pre": "npm run pre-build && webpack --config ./webpack/pre.config.ts",
    "build": "npm run pre-build && webpack --config ./webpack/prod.config.ts",
    "serve:https": "webpack-dev-server --host 0.0.0.0 --https true --config ./webpack/dev.config.ts",
    "precommit": "lint-staged",
    "serve": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start": "npm run serve"
  },
  "dependencies": {
    "apollo-server-express": "^2.4.8",
    "compare-versions": "^3.4.0",
    "express": "^4.16.4",
    "graphql": "^14.2.1",
    "http": "^0.0.0",
    "jsdom": "^14.0.0",
    "moment": "^2.24.0",
    "query-string": "^6.4.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/plugin-transform-async-to-generator": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.4.0",
    "@types/jsdom": "^12.2.3",
    "@types/node": "^11.13.0",
    "@types/node-fetch": "^2.1.7",
    "@types/query-string": "^6.3.0",
    "@types/uuid": "^3.4.4",
    "@types/webpack": "^4.4.26",
    "autoprefixer": "^9.5.0",
    "babel-loader": "^8.0.5",
    "babel-polyfill": "^6.26.0",
    "cross-env": "^5.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "ncp": "^2.0.0",
    "node-fetch": "^2.3.0",
    "nodemon": "^1.18.10",
    "path": "^0.12.7",
    "prettier": "^1.16.4",
    "request": "^2.88.0",
    "rimraf": "^2.6.3",
    "source-map-loader": "^0.2.4",
    "terser-webpack-plugin": "^1.2.3",
    "ts-lint": "^4.5.1",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  }
}
