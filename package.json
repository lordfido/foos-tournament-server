{
  "name": "foos-v2-server",
  "version": "0.0.1",
  "displayName": "Foos v2 Server",
  "description": "A server to provide some data to Foos v2 Client",
  "main": "index.js",
  "author": "Rafael Pérez García <rperez@tuenti.com>",
  "license": "MIT",
  "lint-staged": {
    "linters": {
      "./src/**/*.js": [
        "npm run prettier",
        "npm run lint",
        "git add"
      ]
    }
  },
  "scripts": {
    "lint": "tslint **/*.ts **/*.tsx !node_modules/*",
    "check-types": "tsc",
    "prettier": "prettier --config .prettierrc --write './src/**/*.tsx' './src/**/*.ts' './src/**/*.js'",
    "clean:build": "rimraf dist",
    "pre-build": "npm run lint && npm run check-types && npm run prettier && npm run clean:build",
    "build:dev": "npm run pre-build && webpack --config ./webpack/dev.config.ts",
    "build:pre": "npm run pre-build && webpack --config ./webpack/pre.config.ts",
    "build": "npm run pre-build && webpack --config ./webpack/prod.config.ts",
    "serve:https": "webpack-dev-server --host 0.0.0.0 --https true --config ./webpack/dev.config.ts",
    "precommit": "lint-staged",
    "serve": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start": "npm run serve"
  },
  "dependencies": {
    "apollo-server-express": "^2.3.1",
    "compare-versions": "^3.4.0",
    "express": "^4.16.4",
    "graphql": "^14.1.0",
    "moment": "^2.23.0",
    "query-string": "^6.2.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-transform-async-to-generator": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@types/node": "^10.12.18",
    "@types/node-fetch": "^2.1.4",
    "@types/query-string": "^6.2.0",
    "@types/uuid": "^3.4.4",
    "@types/webpack": "^4.4.22",
    "autoprefixer": "^9.4.4",
    "babel-loader": "^8.0.5",
    "babel-polyfill": "^6.26.0",
    "cross-env": "^5.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.0.4",
    "ncp": "^2.0.0",
    "node-fetch": "^2.3.0",
    "nodemon": "^1.18.9",
    "path": "^0.12.7",
    "prettier": "^1.15.3",
    "request": "^2.88.0",
    "rimraf": "^2.6.3",
    "source-map-loader": "^0.2.4",
    "terser-webpack-plugin": "^1.2.1",
    "ts-lint": "^4.5.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1"
  }
}
